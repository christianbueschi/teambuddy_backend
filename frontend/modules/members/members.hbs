<div class="page-centered members">
    <div ng-controller="memberController">

        <h2>Wähle ein Team</h2>


        <select data-ng-model="selectedTeam" data-ng-change="changeTeam()"
                data-ng-options="team.name for team in teams">
            <option value="">-- Wähle Team --</option>
        </select>


        <div class="checkbox" data-ng-repeat="team in teams" data-ng-if="team.name == selectedTeam.name">

            <h2>Deine Members</h2>
            <table>
                <tr>
                    <th>Vorname</th>
                    <th>Nachname</th>
                    <th></th>
                </tr>
                <tr data-ng-repeat="member in team.members">
                    <td>
                        <span data-ng-hide="editMode">{[{ member.firstName }]}</span>
                        <input type="text" data-ng-show="editMode" data-ng-model="member.firstName"/>
                    </td>
                    <td>
                        <span data-ng-hide="editMode">{[{ member.lastName }]}</span>
                        <input type="text" data-ng-show="editMode" data-ng-model="member.lastName"/>
                    <td>
                        <button data-ng-click="deleteMember(team._id, member._id)">delete</button>
                    </td>
                    <td>
                        <button data-ng-click="editMode = true; editMember(member)">edit</button>
                    </td>
                    <td>
                        <button data-ng-show="editMode" data-ng-click="editMode = false">Save</button>
                    </td>
                    <td>
                        <button data-ng-show="editMode" data-ng-click="editMode = false; cancel()">Cancel</button>
                    </td>
                </tr>
            </table>

            <h2>Füge Member hinzu</h2>

            <form action="#">

                <div>
                    <label>Vorname</label>
                    <input type="text" data-ng-model="member.firstName"/>
                </div>

                <div>
                    <label>Nachname</label>
                    <input type="text" data-ng-model="member.lastName"/>
                </div>

                <div>
                    <label>Email</label>
                    <input type="text" data-ng-model="member.email"/>
                </div>

                <div>
                    <label>Position</label>
                    <input type="text" data-ng-model="member.position"/>
                </div>

                <div>
                    <label>Telephone</label>
                    <input type="text" data-ng-model="member.telephone"/>
                </div>

                <button type="submit" class="btn btn-primary btn-lg" data-ng-click="createMember(member, team._id)">
                    Add
                </button>

            </form>

        </div>

    </div>
</div>